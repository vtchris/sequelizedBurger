<div class="container">
  <!--ROW 1-->
  <div class="row">
    <div class="col col-12 text-center mt-2 mb-3">
      <h1><img src="/assets/img/hamburger.svg" class="img-fluid">Scooby Snack Time?</h1>


    </div>
  </div>
  <!-- ROW 2 -->
  <div class="row mb-5">
    <div class="col col-4 text-right">
      <div style="position: relative">
        <div id="scoobyBadge" class="badge">{{scoobyCount}}</div>
        <img src="/assets/img/scooby.jpg">
      </div>
      
    </div>
    <div class="col col-4 text-center">
      <div class="row">
        <div class="col col-12">
          <h2>Place Your Order!</h2>
        </div>
      </div>
      <div class="row">
        <div class="col col-12">
          <form class="create-form">
            <div class="form-group">
              <input type="text" id="name-txt" name="name" class="p-1" maxlength="20" placeholder="Snack Name">
            </div>
            <button id="submit-btn" class="btn btn-primary btn-lg">Add Snack</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col col-4 text-left">
      <div style="position: relative;max-width:85px;">
        <div id="shaggyBadge" class="badge">{{shaggyCount}}</div>
        <img src="/assets/img/shaggy.jpg">
      </div>      
    </div>

  </div>
  <!--ROW 3-->
  <div class="row">
    <!-- Col -->
    <div class="col col-12">
      <div class="card-deck">
        <div class="card">
          <div class="card-header text-light">
            <h2>Snacks Available!</h2>
          </div>
          <div class="card-body">
            <ul>
              {{#each snacks}}
              {{#unless devoured}}
              <div class="input-group mb-1">
                <li class="form-control">{{this.snack_name}}</li>
                <button class="btn btn-success js_updateBurger" data-id="{{this.id}}">EAT SNACK</button>

              </div>
              {{/unless}}
              {{/each}}
            </ul>
          </div>
        </div>
        <div class="card">
          <div class="card-header text-light">
            <h2>Snacks Eaten!</h2>
          </div>
          <div class="card-body">
            <ul>
              {{#each snacks}}
              {{#if devoured}}
              <div class="input-group mb-1">
                <li class="form-control">{{this.Customer.customer_name}} ate: {{this.snack_name}}</li>
                <button class="btn btn-secondary js_deleteSnack" data-id="{{this.id}}">DIGEST</button>
              </div>

              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Modal -->
  <div class="modal" id="snack-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Pick your best pal</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body text-center">
          <img id="imgPal" src="assets/img/scooby.jpg" style="height:100px;width:auto;margin-right:40px;">
          <select id="pal-select">
            {{#each customers}}
            <option value="{{this.id}}">{{this.customer_name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="modal-footer">
          <button id="feed-btn" type="button" class="btn btn-primary" data-dismiss="modal">Feed Your Pal</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal End -->

</div>